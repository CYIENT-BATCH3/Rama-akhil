#include<stdio.h>
int main()
{
	setbuf(stdout,NULL);
	FILE*fp;
	char str[100]="error is";
	fp=fopen("xyz.txt","r");     //opened file in read mode
	if(fp==NULL)
	{
		printf("file not found");
	}
	else
	{
		fprintf(fp,"%s","welldone");     //writing to file
	}
		if(ferror(fp))
	{
		perror(str)
				printf("error is ");
	}
	fclose(fp)
	}
}
